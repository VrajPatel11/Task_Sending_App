<% if obj.errors.any? %>
  <div class="alert alert-danger">
    <h3 class="alert-heading">Following errors prevented the <%= obj.class.name.downcase %> from being saved!</h3>
     <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>