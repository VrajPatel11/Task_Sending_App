<div class="container-fluid">
  <h1 class = "text-center mt-5" >Status Update App</h1>
</div>
<div class="container-fluid">
  <h1 class = "text-center mt-5 mb-5">Status History</h1>
</div>

<div class="container">
  <% @statuses.each do |status| %>
    <h3 class = "text-center" ><%= link_to status.date, status_path(status) %></h3>
    <div class = "table-responsive">
      <table class="table table-hover table-bordered ">
        <thead class="table table-dark text-center">
          <tr>
            <th>Tasks</th>
            <th>PR Link</th>
            <th>Time Taken</th>
          </tr>
       </thead> 
       <tbody class="table table-info text-center">
         <% status.tasks.each do |task| %>
           <tr>
             <td><%= task.name %></td>
             <td><%= link_to task.pr, task.pr, target: 'blank' %></td>
             <td><%= task.hours %></td>
           </tr>
         <% end %>
       </tbody>
      </table>
    </div>  
  <% end %>  
     
  <div class="apple_pagination mb-3 mt-3">
    <%= will_paginate @statuses, :container => false %>
  </div>
</div>