<div class="container-fluid">
  <h1 class = "text-center mt-5" >Status Update App</h1>
</div>
<div class="container-fluid">
  <h1 class = "text-center mt-5 mb-5">Displaying Status</h1>
</div>

<h3 class = "text-center" > Date: <%= @status.date %></h3>
<div class = "table-responsive">
  <table class="table table-hover table-bordered ">
    <thead class="table table-dark text-center">
      <tr>
        <th>Tasks</th>
        <th>PR Link</th>
        <th>Time Taken</th>
      </tr>
    </thead>  
  
    <tbody class="table table-info text-center">
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.pr %></td>
        <td><%= task.hours %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="d-flex justify-content-center mt-5">
    <h4 class>Click here to view status history</h4>
  </div>
  <div class="d-flex justify-content-center mt-1">  
    <%= link_to 'Status History', statuses_path, class: "btn btn-small btn-info" %>
  </div>
</div> 